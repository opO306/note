rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. ê³µí†µ í•¨ìˆ˜
    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function notUpdatingUserSensitiveFields() {
      return !request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['trustScore', 'role', 'isDeleted', 'lumenBalance', 'createdAt']);
    }
    function isViewIncrementOnly() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']);
    }

    // ğŸš¨ [í•µì‹¬ ìˆ˜ì •] ë‹µê¸€ ì‘ì„± ì‹œ ì—…ë°ì´íŠ¸ë  ìˆ˜ ìˆëŠ” í•„ë“œ ëª¨ë‘ í—ˆìš©
    function isReplyUpdateOnly() {
      return request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly([
          'replies', 'replyCount', 'comments',
          'updatedAt', 'lastReplyAt', 
          'lastReplyAuthor', 'lastReplyNickname', 'lastReplyAuthorUid', 'lastReplyProfileImage',
          'participants' 
        ]);
    }
    // ê¸¸ì¡ì´ ì„ íƒ ì‹œ ì—…ë°ì´íŠ¸ë  ìˆ˜ ìˆëŠ” í•„ë“œ í—ˆìš©
    function isGuideSelectionUpdateOnly() {
      return request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['guideCommentId', 'guideSelectedAt']);
    }

    // 2. ì»¬ë ‰ì…˜ ê·œì¹™

    // ìœ ì € ì •ë³´
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if false; 
      allow update: if isOwner(userId) && notUpdatingUserSensitiveFields();
      match /{document=**} { allow read, write: if isOwner(userId); }
    }

    // ê²Œì‹œê¸€ (Posts)
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      
      // âœ… [ìˆ˜ì •ë¨] ë‹µê¸€ ê´€ë ¨ í•„ë“œ í—ˆìš© ë²”ìœ„ ëŒ€í­ í™•ëŒ€
      // ê²Œì‹œê¸€ ì‘ì„±ìëŠ” ëª¨ë“  í•„ë“œ ì—…ë°ì´íŠ¸ ê°€ëŠ¥ (ê¸¸ì¡ì´ ì„ íƒ í¬í•¨)
      // ë‹¤ë¥¸ ì‚¬ìš©ìëŠ” ì¡°íšŒìˆ˜ ì¦ê°€, ë‹µê¸€ ê´€ë ¨ í•„ë“œë§Œ ì—…ë°ì´íŠ¸ ê°€ëŠ¥
      allow update: if isSignedIn() && (
        resource.data.authorUid == request.auth.uid || 
        isViewIncrementOnly() || 
        isReplyUpdateOnly() ||
        (resource.data.authorUid == request.auth.uid && isGuideSelectionUpdateOnly())
      );
      
      allow delete: if isSignedIn() && resource.data.authorUid == request.auth.uid;
    }

    // ğŸ”¹ ë¹„ìœ  ë°°í‹€ ì»¬ë ‰ì…˜
    match /battles/{battleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      match /votes/{uid} {
        allow read: if true;
        allow write: if isSignedIn() && request.auth.uid == uid;
      }
    }

    // ì•Œë¦¼ (Notifications)
    // ğŸš¨ [ìˆ˜ì •ë¨] ì•Œë¦¼ ìƒì„± ê²½ë¡œë¥¼ ë” ìœ ì—°í•˜ê²Œ í—ˆìš©
    match /user_notifications/{userId}/{document=**} {
      allow read, update, delete: if isOwner(userId);
      // ë‚¨ì´ ë‚´ ì•Œë¦¼í•¨ì— 'ìƒì„±'í•˜ëŠ” ê²ƒ í—ˆìš© (ëŒ“ê¸€ ì•Œë¦¼ ë“±)
      allow create: if isSignedIn(); 
    }

    // ê¸°íƒ€ ì»¬ë ‰ì…˜ë“¤
    match /weekly_quizzes/{quizId} { allow read: if true; allow write: if false; }
    match /daily_quizzes/{quizId} { allow read: if true; }
    match /dailyQuizzes/{quizId} { allow read: if true; }
    match /quizzes/{quizId} { allow read: if true; }

    match /quiz_attempts/{attemptId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || resource == null);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /postViews/{viewId} { allow read, write: if isSignedIn(); }

    // ğŸ”¹ ì£¼ê°„ í†µê³„ ì»¬ë ‰ì…˜ (ë­í‚¹)
    match /weekly_stats/{docId} { allow read: if true; }    // íŒ”ë¡œìš° ì»¬ë ‰ì…˜: ë³¸ì¸ì´ íŒ”ë¡œìš°í•˜ëŠ” ê²½ìš°ë§Œ ìƒì„±/ì‚­ì œ ê°€ëŠ¥
    match /follows/{followId} { 
      // íŒ”ë¡œìš° ì •ë³´ëŠ” ê³µê°œ ì •ë³´ë¡œ ëˆ„êµ¬ë‚˜ ì½ì„ ìˆ˜ ìˆìŒ (ë‹¤ë¥¸ ìœ ì € í”„ë¡œí•„ì—ì„œ íŒ”ë¡œì›Œ/íŒ”ë¡œì‰ ëª©ë¡ ì¡°íšŒìš©)
      // íŠ¸ëœì­ì…˜ì—ì„œ ë¬¸ì„œ ì¡´ì¬ ì—¬ë¶€ í™•ì¸ì„ ìœ„í•´ ë¬¸ì„œê°€ ì—†ì„ ë•Œë„ í—ˆìš©
      // ë¬¸ì„œ ID í˜•ì‹: ${followerUid}_${followingUid}
      allow read: if isSignedIn() && (
        !resource.exists || // ë¬¸ì„œê°€ ì—†ìœ¼ë©´ í—ˆìš© (íŠ¸ëœì­ì…˜ì—ì„œ ì¡´ì¬ ì—¬ë¶€ í™•ì¸ìš©)
        true // íŒ”ë¡œìš° ì •ë³´ëŠ” ê³µê°œ ì •ë³´
      );
      // ë³¸ì¸ì´ íŒ”ë¡œìš°í•˜ëŠ” ê²½ìš°ë§Œ ìƒì„± ê°€ëŠ¥ (followerUidê°€ í˜„ì¬ ì‚¬ìš©ìì—¬ì•¼ í•¨)
      allow create: if isSignedIn() && 
        request.resource.data.followerUid == request.auth.uid &&
        request.resource.data.followerUid != request.resource.data.followingUid; // ìê¸° ìì‹  íŒ”ë¡œìš° ë°©ì§€
      // ë³¸ì¸ì´ íŒ”ë¡œìš°í•œ ê²ƒë§Œ ì‚­ì œ ê°€ëŠ¥
      allow delete: if isSignedIn() && resource.data.followerUid == request.auth.uid;
    }
    match /user_bookmarks/{userId}/{document=**} { allow read, write: if isOwner(userId); }
    match /user_lanterns/{userId}/{document=**} { allow read, write: if isOwner(userId); }
    match /user_notification_settings/{userId} { allow read, write: if isOwner(userId); }
    // ğŸ”¹ ì‹ ê³  ì»¬ë ‰ì…˜: ì»¬ë ‰ì…˜ ì¿¼ë¦¬ë¥¼ ìœ„í•´ ë¬¸ì„œ ë ˆë²¨ ê·œì¹™ í•„ìš”
    match /reports/{reportId} { 
      allow create: if isSignedIn(); 
      // âœ… read ê¶Œí•œ: ê´€ë¦¬ìëŠ” ëª¨ë“  ë¬¸ì„œ ì½ê¸° ë° ì¿¼ë¦¬ ê°€ëŠ¥
      allow read: if isAdmin(); 
      allow update: if isAdmin(); 
      allow delete: if false; 
    }
    match /weekly_stats/{statsId} { allow read: if isSignedIn(); allow write: if false; }
    match /config/{document=**} { allow read: if true; allow write: if false; }

    // âœ… blockedIPs ì»¬ë ‰ì…˜ ê·œì¹™ ì¶”ê°€
    match /blockedIPs/{document=**} { allow read: if true; }

    // âœ… suspendedGuestIds ì»¬ë ‰ì…˜ ê·œì¹™ ì¶”ê°€
    match /suspendedGuestIds/{document=**} { allow read: if true; }

    // âœ… notes ì»¬ë ‰ì…˜ ê·œì¹™ ì¶”ê°€
    match /notes/{noteId} {
      allow read: if isSignedIn() && resource.data.uid == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // ì „ì²´ ì°¨ë‹¨
    match /{document=**} { allow read, write: if false; }
  }
}